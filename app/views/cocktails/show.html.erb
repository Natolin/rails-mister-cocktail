
<div class="new_wrapper" style="background-image: url(<%= image_path("banner.jpg") %>;">
<%= link_to cocktails_path do %>
    <button type="button" class="back btn btn-outline-light">Back</button>
  <% end %>

  <div class="container2">
    <div class="new_cocktail">
        <h1 class="title2"><%= @cocktail.name %></h1>
          <div class="delete_cocktail">
            <%= link_to cocktail_path(@cocktail), :method => "delete" do %>
            <button type="button" class="btn btn-outline-light">Delete cocktail</button>
            <% end %>
          </div>

              <% @cocktail.doses.each do |dose| %>
              <div class="dose">
              <%= dose.description %>
              <%= link_to dose_path(dose), method: :delete do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
              <% end %>
          </div>

        <div class="delete_dose">
          <%= link_to new_cocktail_dose_path(@cocktail) do %>
            <button type="button" class="btn btn-success">Add a dose</button>
          <% end %>
        </div>
    </div>
  </div>
</div>
